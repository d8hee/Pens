<%- include("../public/partials/header.ejs") %>

<body>

    <h1>Hello World</h1>

    <div class="main">

        <a href="/pens/new">
            Create a new entry
        </a>
        

        <div class="postsDiv">
            <h1>Showing all entries</h1>
            <ul>
                <% for(let i in pens){ %>
                    <div>
                        <a href="/pens/<%=pens[i].id%>">
                            <button>
                                View Post
                            </button>
                            </a>
                        <!-- edit button -->
                        <a href="/pens/<%= pens[i].id %>/edit">
                            <button>Edit Post</button>
                        </a>
                        <!-- delete button -->
                        <form action="/pens/<%= pens[i].id%>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete Post">
                        </form>

                        <li>
                            <%= pens[i].entryTitle %>
                        </li>
                        <li>
                            <%= pens[i].entry %>
                        </li>
                    </div>
                <% } %>
            </ul>
        </div>

    </div>


</body>
</html>